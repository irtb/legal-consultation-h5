#!/bin/bash

# ========================================
# 阿里云 OSS 配置示例
# ========================================
# 使用方法: cp oss-config.sh.example oss-config.sh
# 然后修改下面的配置信息

# OSS 基本信息
export OSS_ENDPOINT="oss-cn-hangzhou.aliyuncs.com"          # OSS 节点
export OSS_BUCKET="your-bucket-name"                        # OSS bucket 名称
export OSS_ACCESS_KEY_ID="LTAI5t..."                        # 访问密钥 ID
export OSS_ACCESS_KEY_SECRET="xxxxxxxxxxxxxxxxxxxxx"       # 访问密钥 Secret

# 部署配置
export OSS_BASE_PATH="h5/v8"                               # 默认部署路径
export OSS_CDN_DOMAIN="https://cdn.example.com"            # CDN 域名（可选）

# 缓存控制
export OSS_CACHE_CONTROL="max-age=31536000"                # 静态资源缓存（1年）
export OSS_HTML_CACHE_CONTROL="max-age=600"                # HTML缓存（10分钟）

# 颜色定义
export RED='\033[0;31m'
export GREEN='\033[0;32m'
export YELLOW='\033[1;33m'
export BLUE='\033[0;34m'
export NC='\033[0m'
